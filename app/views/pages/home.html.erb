<h1>Rhodes</h1>
<p>Community Board</p>
<%= link_to "Post", new_notice_path %>
<%= link_to "Sort", () %>

<table>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title.capitalize %></td>
          <td><%= post.user.firstname %></td>
          <% if post.classification == "issue"%>
          <td><%= link_to 'Show', issue_path(:id => post.id)%></td>
          <% else %>
          <td><%= link_to 'Show', notice_path(:id => post.id) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>
